@using NamozVaqtlari.Themes
@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="@isDarkMode" Theme="NamozVaqtlari.Themes.Theme.SpacesTheme()" />

<MudAppBar Color="Color.Primary" Fixed="false">
    <MudIconButton Icon="fas fa-mosque" Color="Color.Success" />

    <MudText Typo="Typo.h6" Class="ml-3">@currentDate yil kungi Namoz Vaqtlari</MudText>

    <MudSpacer />
    <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="mx-2 rounded"
        StartIcon="@Icons.Material.Filled.Public" OnClick="() => NavigateToRegion()">
        Viloyatlar
    </MudButton>

    <MudSwitch T="bool" @bind-Value="_isRegion" Size="Size.Large"
        ThumbIcon="@(_isRegion ? Icons.Material.Rounded.LocationOn : Icons.Material.Rounded.Public )"
        ThumbIconColor="@(_isRegion ? Color.Error : Color.Success)" />
    <MudButton Variant="Variant.Filled" Color="Color.Secondary" Class="mx-2 rounded"
        StartIcon="@Icons.Material.Filled.LocationOn" OnClick="() => NavigateToLocation()">
        Joylashuv
    </MudButton>


    <MudToggleIconButton @bind-Toggled="@isDarkMode" Icon="@Icons.Material.Filled.LightMode" Color="Color.Inherit"
        ToggledIcon="@Icons.Material.Filled.DarkMode" ToggledColor="Color.Inherit" />

    <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" />
</MudAppBar>

<MudContainer>
    @Body
</MudContainer>
