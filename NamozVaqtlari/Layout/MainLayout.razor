@inherits LayoutComponentBase
@inject NavigationManager Navigation

<MudThemeProvider IsDarkMode="@isDarkMode" />
    <MudAppBar Color="Color.Primary" Fixed="false">
        <MudIconButton Icon="fas fa-mosque" Color="Color.Inherit"/>
        <MudText Typo="Typo.h6" Class="ml-3">Namoz Vaqtlari</MudText>
        <MudSpacer />
        <MudToggleIconButton @bind-Toggled="@isDarkMode" Icon="@Icons.Material.Filled.LightMode" Color="Color.Inherit"
            ToggledIcon="@Icons.Material.Filled.DarkMode" ToggledColor="Color.Inherit" />
        <MudIconButton Icon="@Icons.Custom.Brands.Telegram" Color="Color.Inherit" OnClick="@Telegram" />
    </MudAppBar>
    <MudContainer>
        @Body
    </MudContainer>


